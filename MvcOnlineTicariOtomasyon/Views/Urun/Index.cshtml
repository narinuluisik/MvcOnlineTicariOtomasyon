@using MvcOnlineTicariOtomasyon.Models.Siniflar;
    @model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Ürünler</h2>
<br />
@using(Html.BeginForm("Index","Urun",FormMethod.Get))
            {
                <p>
                    Ürün Adı:@Html.TextBox("p")
                    <input type="submit" value="Ara" />
                </p>
            }
<br />

<table class="table table-bordered">

    <tr>

        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT </th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Satış Yap</th>
    
    </tr>

    @foreach(var u in Model)
            {
<tr>
 
    <td>@u.UrunAd</td>
    <td>@u.Marka</td>
    <td>@u.Stok</td>
    <td>@u.AlisFiyat ₺</td>
    <td>@u.SatisFiyat ₺</td>
    <td>@u.Kategori.KategoriAd</td>
    <td>
        <img src="@u.UrunGorsel" style="width:100px; height:80px;" />
    </td>
    <td><a href="/Urun/UrunSil/@u.Urunid" class="btn btn-danger">Sil</a></td>
    <td><a href="/Urun/UrunGetir/@u.Urunid" class="btn btn-success">Güncelle</a></td>
    <td><a href="/Urun/SatisYap/@u.Urunid" class="btn btn-default" style="background-color:aqua">Satış Yap</a></td>

</tr>
            }
</table>
<a href="/Urun/YeniUrun/" class="btn btn-primary">Yeni Urun</a>

@model MvcOnlineTicariOtomasyon.Models.Siniflar.Kategori
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<script src="~/Scripts/jquery-3.4.1.js"></script>

<h2>Yeni Kategori Sayfası</h2>

<br />
<form class="form-group"  method="post">
    @Html.LabelFor(x=>x.KategoriAd)
    @Html.TextAreaFor(x => x.KategoriAd, new {@class="form-control"})
    <br />
    <button class="btn btn-info" id="Btn1">Kaydet</button>
    <script>
        $('#Btn1').click(function ()
        {
            alert("Kategori başarı şekilde eklendi")
        });
    </script>
</form>
